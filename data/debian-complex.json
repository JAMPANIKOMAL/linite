{
  "vscode": {
    "name": "Visual Studio Code",
    "description": "Microsoft's VS Code editor requires adding Microsoft's repository",
    "commands": [
      "wget -qO- https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > packages.microsoft.gpg",
      "sudo install -o root -g root -m 644 packages.microsoft.gpg /etc/apt/trusted.gpg.d/",
      "sudo sh -c 'echo \"deb [arch=amd64,arm64,armhf signed-by=/etc/apt/trusted.gpg.d/packages.microsoft.gpg] https://packages.microsoft.com/repos/code stable main\" > /etc/apt/sources.list.d/vscode.list'",
      "sudo apt update",
      "sudo apt install -y code"
    ]
  },
  "google-chrome": {
    "name": "Google Chrome",
    "description": "Google Chrome browser requires downloading the .deb package",
    "commands": [
      "wget -q https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb",
      "sudo dpkg -i google-chrome-stable_current_amd64.deb",
      "sudo apt-get install -f -y"
    ]
  },
  "discord": {
    "name": "Discord",
    "description": "Discord requires downloading the .deb package",
    "commands": [
      "wget -O discord.deb 'https://discord.com/api/download?platform=linux&format=deb'",
      "sudo dpkg -i discord.deb",
      "sudo apt-get install -f -y"
    ]
  },
  "slack": {
    "name": "Slack",
    "description": "Slack requires downloading the .deb package",
    "commands": [
      "wget https://downloads.slack-edge.com/releases/linux/4.38.125/prod/x64/slack-desktop-4.38.125-amd64.deb",
      "sudo dpkg -i slack-desktop-4.38.125-amd64.deb",
      "sudo apt-get install -f -y"
    ]
  },
  "spotify": {
    "name": "Spotify",
    "description": "Spotify requires adding Spotify's repository",
    "commands": [
      "curl -sS https://download.spotify.com/debian/pubkey_6224F9941A8AA6D1.gpg | sudo gpg --dearmor --yes -o /etc/apt/trusted.gpg.d/spotify.gpg",
      "echo 'deb http://repository.spotify.com stable non-free' | sudo tee /etc/apt/sources.list.d/spotify.list",
      "sudo apt update",
      "sudo apt install -y spotify-client"
    ]
  }
}